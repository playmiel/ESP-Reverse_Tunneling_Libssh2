modules = ["arduino"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "ESP32 Reverse Tunnel"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "esp32_compile"

[[workflows.workflow]]
name = "ESP32 Reverse Tunnel"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "arduino-cli compile --fqbn esp32:esp32:esp32 esp32_reverse_tunnel.ino && arduino-cli upload --fqbn esp32:esp32:esp32 esp32_reverse_tunnel.ino"

[[workflows.workflow]]
name = "esp32_compile"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "arduino-cli compile --fqbn esp32:esp32:esp32 ."

[deployment]
run = ["sh", "-c", "arduino-cli compile --fqbn esp32:esp32:esp32 esp32_reverse_tunnel.ino && arduino-cli upload --fqbn esp32:esp32:esp32 esp32_reverse_tunnel.ino"]
